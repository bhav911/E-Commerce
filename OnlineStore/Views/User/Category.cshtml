@model List<OnlineStoreModel.CustomModels.CategoryModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="accordion accordion-flush" id="categories">

        @{ 
            foreach(var category in Model)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#Category-@category.CategoryID" aria-expanded="true" aria-controls="collapseOne">
                            @category.Name
                        </button>
                    </h2>
                    <div id="Category-@category.CategoryID" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#categories">
                        <div class="accordion-body">
                            <div class="list-group">
                                @{ 
                                    foreach(var subCategory in category.subCategoryList) { 
                                        <a href="/User/GetProductsOf?categoryId=@subCategory.SubCategoryID" class="list-group-item list-group-item-action" aria-current="true">
                                            @subCategory.Name
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>       
            }
        }

    </div>
</div>
