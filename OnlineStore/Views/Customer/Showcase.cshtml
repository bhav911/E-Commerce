<script>
    $(document).ready(function () {
        setTimeout(function () {
            const navbar = document.getElementById('nav');
            navbar.style.top = '0';
            navbar.classList.add('show'); // Add the class to make the navbar visible
        }, 1500); // 2 seconds delay

        const shootingStar = document.querySelector('.shooting-star');
        shootingStar.style.animation = 'none'; // Disable initial animation
        setInterval(function () {
            shootingStar.style.animation = 'none'; // Reset animation
            void shootingStar.offsetWidth; // Trigger reflow to restart the animation
            shootingStar.style.animation = 'shooting-star 1s linear'; // Restart animation
        }, 5000); // 3 seconds interval
    });
    AOS.init();

