<style>
    .typewriter p {
        overflow: hidden; /* Ensures the content is not revealed until the animation */
        border-right: .15em solid black; /* The typwriter cursor */
        white-space: nowrap; /* Keeps the content on a single line */
        margin: 0 auto; /* Gives that scrolling effect as the typing happens */
        letter-spacing: .15em; /* Adjust as needed */
        animation: typing 1.5s steps(40, end), blink-caret .75s step-end infinite;
    }


    .nav-text {
        color: orange;
        
    }

    body {
        background-color: black;
    }

        body::-webkit-scrollbar {
            display: none;
        }

    .special-elite-regular {
        font-family: "Orbitron", sans-serif;
        font-optical-sizing: auto;
        font-weight: 500;
        font-style: normal;
        margin-right: -1.2em;
    }
    /* The typing effect */
    @@keyframes typing {
        from {
            width: 0
        }

        to {
            width: 100%
        }
    }

    label *  :focus{
        background-color:transparent !important;
        color:white !important;
    }

    #nav {
        overflow: hidden;
        position: relative;
        top: -20px; /* Hide navbar initially */
        width: 100%;
        transition: top 0.75s ease-in-out; /* Smooth slide down effect */
        visibility: hidden; /* Make the navbar initially invisible */
    }

        #nav.show {
            visibility: visible; /* Make the navbar visible when adding the class */
        }

    .nav-item-holder p:hover {
        color: white;
        cursor: pointer;
    }

    .shooting-star {
        position: absolute;
        width: 4px;
        height: 110px;
        background: linear-gradient(white, transparent);
        top: -100px; /* Start off-screen */
        left: 0;
        transform: rotate(110deg);
        animation: shooting-star 5s linear infinite;
    }

    @@keyframes shooting-star {
        0% {
            top: -100px;
            left: 0;
            opacity: 1;
        }

        100% {
            top: 500px;
            left: 90%;
            opacity: 0;
        }
    }

    a {
        text-decoration: none !important;
    }


    #comet {
        position: fixed;
        top: 0;
        left: 0;
        width: 150px;
        height: 150px;
        opacity: 0;
        transition: opacity 0.5s ease-out;
        z-index:1000
    }

        #comet.visible {
            opacity: 1;
        }

</style>

