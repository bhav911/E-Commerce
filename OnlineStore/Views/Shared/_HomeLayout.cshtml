<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Theme/sb-admin-2.css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/Theme/sb-admin-2.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.min.js"></script>

</head>
<body>
    @if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]');
        </script>
    }

    @if (TempData["error"] != null)
    {
        <script>
            toastr.error('@TempData["error"]');
        </script>
    }

    @if(TempData["warning"] != null)
    {
        <script>
            toastr.warning('@TempData["warning"]');
        </script>
    }

    <div id="wrapper" class="position-relative">


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <section style="padding-top: 2em;">
                    <div class="container-fluid">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="wrap border rounded-5" style="box-shadow: 0px 10px 34px -15px rgba(0, 0, 0, 0.24); background: #fff; border-radius: 5px; ">
                                    <div class="login-wrap p-3">
                                        @Html.Partial("Navbar")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section style="padding: 0.4em 0;">
                    <div class="container-fluid">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="wrap border rounded-5" style="box-shadow: 0px 10px 34px -15px rgba(0, 0, 0, 0.24); background: #fff; border-radius: 5px; ">
                                    <div class="login-wrap p-sm-5 p-0">
                                        @RenderBody()
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


                <section style="padding: 2em 0;">
                    <div class="container-fluid">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="wrap border rounded-5" style="box-shadow: 0px 10px 34px -15px rgba(0, 0, 0, 0.24); background: #fff; border-radius: 5px; ">
                                    <div class="login-wrap p-4 p-md-5">
                                        @RenderSection("Featuring")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->

    </div>
</body>
</html>